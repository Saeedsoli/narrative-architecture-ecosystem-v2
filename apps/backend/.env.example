# ===============================================
# Environment Variables for Go Backend
# ===============================================

# --- Server Configuration ---
GIN_MODE="debug" # Use 'release' in production for better performance
HTTP_PORT="8080"
LOG_LEVEL="debug" # 'info' or 'warn' in production

# --- Database Connections ---
DATABASE_URL="postgres://dev:devpass@localhost:5432/narrative_arch?sslmode=disable"
MONGODB_URI="mongodb://localhost:27017"
MONGODB_DB="narrative_arch_content"
REDIS_ADDR="localhost:6379"
REDIS_PASSWORD=""
REDIS_DB="0"
ELASTIC_URL="http://localhost:9200"

# --- JWT Authentication ---
# Generate strong secrets using: `openssl rand -base64 32`
JWT_SECRET_KEY="CHANGE_ME_A_VERY_STRONG_JWT_SECRET_KEY"
JWT_REFRESH_SECRET_KEY="CHANGE_ME_A_DIFFERENT_STRONG_REFRESH_SECRET"
# Time-to-live for tokens
JWT_ACCESS_TOKEN_TTL_MINUTES="15"
JWT_REFRESH_TOKEN_TTL_DAYS="30"

# --- Payment Gateway (Zarinpal) ---
ZARINPAL_MERCHANT_ID=""
# Set to "false" in production
ZARINPAL_IS_SANDBOX="true"

# --- Email Service (AWS SES) ---
AWS_REGION="us-east-1"
AWS_ACCESS_KEY_ID=""
AWS_SECRET_ACCESS_KEY=""
EMAIL_SENDER="Narrative Architecture <noreply@narrative-arch.com>"

# --- Service URLs ---
# URL of the Python AI service
AI_SERVICE_URL="http://localhost:8000"
# Frontend URL for generating links in emails (e.g., password reset)
FRONTEND_URL="http://localhost:3000"