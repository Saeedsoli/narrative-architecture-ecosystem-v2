# ===============================================
# Environment Variables for Next.js Frontend
# ===============================================

# --- Public Variables (exposed to browser) ---

# Base URL of your backend API. In development, this points to the Go service.
NEXT_PUBLIC_API_URL="http://localhost:8080"

# WebSocket URL for real-time features like chat.
NEXT_PUBLIC_WS_URL="ws://localhost:8080"

# Public URL for your CDN where media files are stored (S3, R2, etc.).
# In local dev, this can point to your local S3-compatible service (e.g., MinIO).
NEXT_PUBLIC_CDN_URL="http://localhost:9000/narrative-media"


# --- Server-Side Variables (NEVER expose to browser) ---

# MongoDB Connection (used in API routes or Server Actions for direct DB access if needed)
MONGODB_URI="mongodb://localhost:27017"
MONGODB_DB="narrative_arch_content"

# S3/R2 Credentials (for server-side uploads, e.g., voice messages)
S3_ENDPOINT="http://localhost:9000"
S3_REGION="auto" # 'auto' for Cloudflare R2, 'us-east-1' etc. for AWS
S3_BUCKET="narrative-media"
S3_ACCESS_KEY_ID="minioadmin" # Default for local MinIO
S3_SECRET_ACCESS_KEY="minioadmin" # Default for local MinIO

# A simple secret to protect internal API routes (like voice message upload).
# Generate a long, random string.
INTERNAL_UPLOAD_TOKEN="CHANGE_ME_IN_PRODUCTION_WITH_A_STRONG_SECRET"

# NextAuth.js configuration (if you choose to use it)
# The base URL of your application.
NEXTAUTH_URL="http://localhost:3000"
# A secret used to sign cookies and tokens. Generate with: `openssl rand -base64 32`
NEXTAUTH_SECRET="CHANGE_ME_IN_PRODUCTION"

# Google OAuth Credentials (for social login)
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""