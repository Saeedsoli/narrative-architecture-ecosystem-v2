{
  settings {
    analysis {
      filter {
        en_stop { type stop, stopwords _english_ }
      },
      analyzer {
        en_custom {
          type custom,
          tokenizer standard,
          filter [lowercase, asciifolding, en_stop, porter_stem]
        }
      }
    }
  },
  mappings {
    dynamic strict,
    properties {
      id               { type keyword },
      content_group_id { type keyword },
      locale           { type keyword },
      slug             { type keyword },
      title            { type text, analyzer en_custom },
      excerpt          { type text, analyzer en_custom },
      content          { type text, analyzer en_custom },
      tags             { type keyword },
      category         { type keyword },
      publishedAt      { type date },
      author {
        properties {
          id   { type keyword },
          name { type text, analyzer en_custom }
        }
      }
    }
  }
}